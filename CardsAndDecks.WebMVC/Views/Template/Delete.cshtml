@model CardsAndDecks.Models.TemplateSimple

@{
    ViewBag.Title = "Delete";
}

<div class="page-header">
    <h2><b>Delete</b></h2>
    <h4>@Model.Name</h4>
</div>

<h3>Are you sure you want to Delete this Template? All cards using this Template will be Deleted as well.</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Id)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Id)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @Html.ActionLink("Back to Template List", "Index", null, new { @class="btn btn-default"})
            <input type="submit" value="Delete" class="btn btn-danger" /> 
        </div>
    }
</div>
