@model CardsAndDecks.Models.TemplateSimple

@{
    ViewBag.Title = "Details";
}

<h2>@Model.Name Template</h2>

<div>
    @Html.HiddenFor(model => model.Id)

    <h4>Category: N/A</h4>
    <hr />
    <dl class="dl-horizontal">
    </dl>
</div>

@if (TempData.ContainsKey("SaveEdit"))
{
    <div class="alert alert-success fade in" role="alert">

        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveEdit"]
    </div>
}

<table class="table">
    <tr>
        <td>
            <p>Name</p>
        </td>
        <td>
            <p>Text</p>
        </td>
    </tr>
    @foreach (var item in Model.PropertyList)
    {
        if (item.PropertyName != "Name")
        {
            <tr>
                <td>
                    @Html.DisplayFor(c => item.PropertyName)
                </td>
                <td>
                    @Html.DisplayFor(c => item.PropertyType)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", "TemplateProperty", new { id = item.Id }, null)
                </td>
            </tr>
        }
    }
</table>

<p>
    @Html.ActionLink("Back to Template List", "Index") |
    @Html.ActionLink("Delete Template", "Delete", new { id = Model.Id })
</p>
