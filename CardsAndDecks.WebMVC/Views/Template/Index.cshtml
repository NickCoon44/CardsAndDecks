@model IEnumerable<CardsAndDecks.Models.TemplateSimple>

@{
    ViewBag.Title = "Index";
}

<h2 class="page-header"><b>Templates</b></h2>

<p>
    @Html.ActionLink("+ New Template", "Create", null, new { @class="btn btn-info"})
</p>

@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">

        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}

<table class="table table-striped">

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <b>@Html.ActionLink(item.Name, "Details", new { id = item.Id })</b>
            </td>
            <td>
                @Html.HiddenFor(modelItem => item.Id)
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class="btn btn-danger"})
            </td>
        </tr>
    }

</table>
